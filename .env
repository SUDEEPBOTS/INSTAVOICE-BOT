# ===== TELEGRAM CREDENTIALS =====
# Get from https://my.telegram.org
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# ===== BOT TOKEN =====
# Get from @BotFather
BOT_TOKEN=your_bot_token_here

# ===== USERBOT SESSION =====
# Generate using Telethon (Termux)
SESSION_STRING=your_telethon_session_string_here

# ===== DATABASE =====
# MongoDB from https://mongodb.com (free)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/
DB_NAME=instavoicebot

# ===== BOT OWNER =====
# Your user ID from @userinfobot
OWNER_ID=your_user_id

# ===== VOICE SETTINGS =====
# Instagram style deep voice
VOICE_PITCH_SHIFT=-4
VOICE_BASS_BOOST=8
VOICE_REVERB=0.15
VOICE_SPEED=0.92

# ===== BOT SETTINGS =====
LOG_LEVEL=INFO
MAX_VOICE_SIZE=20
CLEANUP_HOURS=24
